# https://editorconfig.org/

root = true

[*]
max_line_length = 80
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
insert_final_newline = ignore

[Makefile]
# Makefiles always use tabs for indentation
indent_style = tab

[*.py]
indent_style = space
indent_size = 4

[*.sh]
indent_size = 4

# shfmt options
shell_variant  = bash
switch_case_indent = true

[*.rst]
indent_style = space
indent_size = 2
max_line_length = 79

[*.json]
insert_final_newline = ignore

[**.min.js]
# Minified JavaScript files shouldn't be changed
indent_style = ignore
insert_final_newline = ignore
